// Prisma schema for Home Health Automation MVP

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// NextAuth tables
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Domain entities
model Patient {
  id        String   @id @default(cuid())
  mrn       String   @unique
  firstName String?
  lastName  String?
  dob       DateTime?
  payer     String?
  createdAt DateTime @default(now())

  referrals        Referral[]
  admissionPackets AdmissionPacket[]
  visits           Visit[]

  @@index([mrn])
}

model Referral {
  id        String   @id @default(cuid())
  patientId String
  source    String
  pdfPath   String?
  status    String   @default("pending") // pending, reviewed, approved, rejected

  patient Patient @relation(fields: [patientId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([patientId])
  @@index([status])
}

model AdmissionPacket {
  id           String   @id @default(cuid())
  patientId    String
  dataJson     Json
  signedPdfPath String?
  status       String   @default("draft") // draft, pending_signature, signed, completed

  patient Patient @relation(fields: [patientId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([patientId])
  @@index([status])
}

model Employee {
  id            String    @id @default(cuid())
  name          String
  role          String
  licenseNo     String?
  licenseExpiry DateTime?

  timesheetRows TimesheetRow[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([role])
}

model Visit {
  id            String   @id @default(cuid())
  patientId     String
  caregiverName String?
  startPlanned  DateTime
  endPlanned    DateTime?
  status        String   @default("scheduled") // scheduled, in_progress, completed, cancelled

  patient    Patient     @relation(fields: [patientId], references: [id], onDelete: Cascade)
  evvEvents  EvvEvent[]
  timesheetRows TimesheetRow[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([patientId])
  @@index([startPlanned])
  @@index([status])
}

model EvvEvent {
  id        String   @id @default(cuid())
  visitId   String
  kind      String   // check_in, check_out, geofence_enter, geofence_exit
  timestamp DateTime
  lat       Float
  lng       Float

  visit Visit @relation(fields: [visitId], references: [id], onDelete: Cascade)

  @@index([visitId])
  @@index([timestamp])
}

model TimesheetRow {
  id         String  @id @default(cuid())
  employeeId String
  visitId    String? // Optional for manual entries
  minutes    Int
  type       String  // visit, travel, admin

  employee Employee @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  visit    Visit?   @relation(fields: [visitId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@index([employeeId])
  @@index([visitId])
}

model Notification {
  id      String    @id @default(cuid())
  to      String    // email or phone
  channel String    // email, sms, push
  subject String
  link    String?
  sentAt  DateTime?

  createdAt DateTime @default(now())

  @@index([to])
  @@index([sentAt])
}

model AuditEvent {
  id       String   @id @default(cuid())
  who      String
  action   String
  entity   String
  entityId String
  when     DateTime @default(now())
  metaJson Json?

  @@index([who])
  @@index([entity, entityId])
  @@index([when])
}

